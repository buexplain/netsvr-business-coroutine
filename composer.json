{
  "name": "buexplain/netsvr-business-coroutine",
  "description": "这是一个基于hyperf框架开发的，可以快速开发websocket全双工通信业务的包，它基于https://github.com/buexplain/netsvr进行工作。",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "buexplain",
      "email": "buexplain@qq.com"
    }
  ],
  "keywords": [
    "php",
    "websocket",
    "coroutine",
    "swoole",
    "swow",
    "hyperf",
    "netsvr"
  ],
  "require": {
    "php": ">=8.1",
    "buexplain/netsvr-protocol-php": "^3.0.0",
    "psr/container": "^2.0",
    "psr/log": "^2.0|^3.0"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "NetsvrBusiness\\": "src/"
    },
    "files": [
      "src/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "NetsvrBusinessTest\\": "tests/"
    }
  },
  "require-dev": {
    "phrity/websocket": "^v3.0",
    "illuminate/container": "^10.0",
    "phpunit/phpunit": "^10.0",
    "swoole/ide-helper": "*",
    "hyperf/event": "~3.1",
    "hyperf/framework": "~3.1",
    "hyperf/config": "~3.1",
    "google/protobuf": "~3.22",
    "hyperf/command": "~3.1",
    "hyperf/process": "~3.1",
    "hyperf/server": "~3.1",
    "hyperf/signal": "~3.1",
    "swow/swow": "^v1.5.3"
  },
  "scripts": {
    "test": "phpunit --configuration phpunit.xml --log-events-verbose-text phpunit.log"
  },
  "extra": {
    "hyperf": {
      "config": "NetsvrBusiness\\ConfigProvider"
    }
  }
}
